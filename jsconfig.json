{
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@components/*": ["components/*"],
        "@constants/*": ["constants/*"],
        "@modules/*": ["modules/*"],
        "@styles/*": ["styles/*"],
        "@utils/*": ["utils/*"],
        "@hooks/*": ["hooks/*"],
        "@config": ["config.js"]
      },
      "target": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
  }